{
  "env": {
    "browser": true,
    "es6": true,
    "node": false
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "overrides": [
    {
      "extends": ["plugin:json/recommended"],
      "files": ["*.json"]
    },
    {
      "extends": ["eslint-config-prettier", "./.eslintrc.js.json", "plugin:mdx/overrides"],
      "files": ["*.mdx"],
      "plugins": ["import"]
    },
    {
      "extends": ["eslint-config-prettier", "./.eslintrc.js.json"],
      "files": ["*.js", "*.jsx"],
      "plugins": ["import"]
    },
    {
      "extends": ["eslint-config-prettier", "./.eslintrc.js.json"],
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["components/tsconfig.json"]
      },
      "plugins": ["@typescript-eslint", "import"]
    }
  ]
}
